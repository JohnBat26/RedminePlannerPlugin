<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'planner', :plugin => 'planner' %>
<% end %>

<div class="contextual">
<%= link_to l(:label_planner_task_new), new_project_plan_task_path , :class => 'icon icon-add' %>
</div>

<h2><%= l(:label_planner_tasks) %></h2>

<div class="autoscroll">
<table class="list planner">
  <thead><tr>
    <th><%= l(:field_name) %></th>
    <th><%= l(:field_planner_owner) %></th>
    <th></th>
  </tr></thead>
  <tbody>
  <% @plan_tasks.each do |plan_task| %>
    <tr id="plan_goup-<%= plan_task.id %>" class="<%= cycle 'odd', 'even' %> member">
      <td><%= link_to plan_task.name, plan_task %></td>
      <td><%= plan_task.owner ? link_to_user(plan_task.owner) : "-" %></td>
      <td class="buttons">
        <%= link_to(l(:button_edit), edit_plan_task_path(plan_task), :class => 'icon icon-edit') %>
        <%= link_to(l(:button_delete), plan_task, :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del') %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
