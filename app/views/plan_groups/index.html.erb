<h1>Listing plan_groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Group type</th>
    <th>Leader</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plan_groups.each do |plan_group| %>
  <tr>
    <td><%= link_to plan_group.name, plan_group %></td>
    <td><%= plan_group.group_type %></td>
    <td><%= plan_group.team_leader ? link_to_user(plan_group.team_leader) : "-" %></td>
    <td><%= link_to 'Edit', edit_plan_group_path(plan_group) %></td>
    <td><%= link_to 'Destroy', plan_group, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

