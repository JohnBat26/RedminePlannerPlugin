<div class="box planner-range">
  <%= form_tag(chart_url, :remote => true, :method => 'get') do %>
    <span>
      <label for="week_start_date" class="bold">
        <%= l(:field_planner_plan_week_date) %>
      </label>
      <%= text_field_tag :week_start_date, @chart.start_date, :size => 10 %><%= calendar_for('week_start_date') %>
    </span>

    <span>
      <label for="num_weeks" class="bold">
        <%= l(:field_planner_plan_weeks_show) %>
      </label>
      <%= text_field_tag 'num_weeks', @chart.weeks, :size => 2, :class => 'num' %>
    </span>

    <span>
      <input type="hidden" name="include_ready" value="0"/>
      <%= check_box_tag 'include_ready', "1", @include_ready %>
      <label for="include_ready">
        <%= l(:label_planner_req_status_ready) %>
      </label>
    </span>
    <span>
      <input type="hidden" name="include_new" value="0"/>
      <%= check_box_tag 'include_new', "1", @include_new %>
      <label for="include_new">
        <%= l(:label_planner_req_status_new) %>
      </label>
    </span>
    <span>
      <input type="hidden" name="include_denied" value="0"/>
      <%= check_box_tag 'include_denied', "1", @include_denied %>
      <label for="include_denied">
        <%= l(:label_planner_req_status_denied) %>
      </label>
    </span>

    <%= submit_tag l(:button_update) %>
  <% end %>
</div>
